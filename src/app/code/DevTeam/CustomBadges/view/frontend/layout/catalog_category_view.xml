<page 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="category.products.list" template="DevTeam_CustomBadges::product/list.phtml">
            <block 
                name="product.custom.badge" 
                template="DevTeam_CustomBadges::product/custom-badge.phtml"
            >
                <arguments>
                    <argument 
                        name="product_custom_badge_view_model"
                        xsi:type="object"
                    >DevTeam\CustomBadges\ViewModel\Product\CustomBadge</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
